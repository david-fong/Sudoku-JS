{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",

        // Project References:
        "composite": true,

        // Compiler Behaviour:
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        //"importHelpers": true,
        "skipLibCheck": true, // time-saving measure.

        // Language Settings:
        "target": "es6",
        "lib": [ "es6", "dom", "ES2019.Array" ],
        "module": "ES2020",

        // Emit Flags:
        "sourceMap":      true,
        //"removeComments": true,
        "alwaysStrict":   true,

        // Grammar Checking:
        "strictNullChecks":     true,
        "strictFunctionTypes":  true,
        "noImplicitReturns":    true,
        "strictBindCallApply":  true,
        "noImplicitThis":       true,
        "noImplicitAny":        true,
    },
}